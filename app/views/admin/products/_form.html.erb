<%= form_for [:admin, @product], html: { class: 'form-horizontal' } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">Fill out the form below</div>
    <div class="panel-body">
      <%= render '/shared/flash_messages' unless flash.empty? %>
      <div class="form-group">
        <%= f.label :active, 'Active?', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <div class="checkbox">
            <label>
              <%= f.check_box :active %> If checked, this product is available for purchase
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Example: $18 per lesson' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :quantity, class: 'col-sm-2 control-label' %>
        <div class="col-sm-3">
          <%= f.number_field :quantity, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :price, class: 'col-sm-2 control-label' %>
        <div class="col-sm-3">
          <div class="input-group">
            <span class="input-group-addon">$</span>
            <%= f.number_field :price, class: 'form-control' %>
            <span class="input-group-addon">.00</span>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :paypal_button_code, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :paypal_button_code, rows: 8, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary">Save Product</button>
      <%= link_to 'Cancel', admin_products_path, class: 'btn btn-link' %>
    </div>
  </div>
<% end %>
