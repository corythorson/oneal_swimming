<%= form_for [:admin, @location], html: { class: 'form-horizontal' } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">Fill out the form below</div>
    <div class="panel-body">
      <%= render '/shared/flash_messages' unless flash.empty? %>
      <div class="form-group">
        <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Example: Highland Pool' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <%= f.check_box :is_active %> Is this pool available on the scheduler?
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :street_address, "Address", class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :street_address, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :city, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :state, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :state, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :zip_code, "Zip Code", class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :zip_code, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary">Save Location</button>
      <%= link_to 'Cancel', admin_locations_path, class: 'btn btn-link' %>
    </div>
  </div>
<% end %>
