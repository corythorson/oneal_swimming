<%= form_for [:admin, @instructor], html: { class: 'form-horizontal' } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">Fill out the form below</div>
    <div class="panel-body">
      <%= render '/shared/flash_messages' unless flash.empty? %>
      <% if @instructor.new_record? || @instructor.role != 'customer' %>
        <div class="form-group">
          <%= f.label :role, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.select :role, [['Administrator', 'admin'], ['Instructor', 'instructor'], ['Disabled', 'disabled']], { include_blank: true }, { class: 'form-control' } %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :is_instructor, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <div class="checkbox">
              <label>
                <%= f.check_box :is_instructor %> This instructor is an instructor
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :is_private_instructor, "Private instructor?", class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <div class="checkbox">
              <label>
                <%= f.check_box :is_private_instructor %> This person is a <em>private instructor</em>. This means that the only way customers can see them is by entering the invite code<sup>*</sup> on the schedule.
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :instructor_invite_code, "Invite Code <sup>*</sup>".html_safe, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :instructor_invite_code, class: 'form-control', placeholder: 'One word, e.g. "SWIMFAST"' %>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :first_name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :phone, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :phone, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :email, class: 'form-control' %>
        </div>
      </div>
      <% if @instructor.new_record? %>
        <div class="form-group">
          <%= f.label :password, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirm Password', class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :profile, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :profile, rows: 15, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary">Save Instructor Account</button>
      <%= link_to 'Cancel', admin_instructors_path, class: 'btn btn-link' %>
    </div>
  </div>
<% end %>
