<section class="admin-section">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3>Statistics</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Lessons Purchased by Date (last 30 days)
          </div>
          <div class="panel-body">
            <div class="chart-responsive">
              <%= line_chart @order_data, { height: '100px', responsive: true } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            Lessons by Status
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-8">
                <div class="chart-responsive">
                  <%= chartjs_doughnut_chart @lesson_data, { responsive: true } %>
                </div><!-- ./chart-responsive -->
              </div><!-- /.col -->
              <div class="col-md-4">
                <ul class="chart-legend clearfix list-unstyled">
                  <% @lesson_data.each do |pd| %>
                    <li><i class="fa fa-circle-o" style="color: <%= pd[:color] %>"></i> <%= pd[:label] %></li>
                  <% end %>
                </ul>
              </div><!-- /.col -->
            </div><!-- /.row -->
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
