<%= form_tag create_lessons_admin_user_path(@user), class: 'form-horizontal' do %>
  <div class="form-group">
    <label class="col-sm-3 control-label">Quantity</label>
    <div class="col-sm-9">
      <input type="number" name="quantity" class="form-control" placeholder="How many lessons? (must be 1 or more)">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Cost</label>
    <div class="col-sm-9">
      <div class="input-group">
        <span class="input-group-addon">$</span>
        <input type="text" class="form-control" name="total" placeholder="Amount charged (0 for no charge)">
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Order ID</label>
    <div class="col-sm-9">
      <input type="text" name="paypal" class="form-control" placeholder="Order ID (optional)">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-3 control-label">Notes</label>
    <div class="col-sm-9">
      <textarea name="notes" rows="5" class="form-control" placeholder="Why are you creating this by hand?"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-primary">Save</button>
      <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
    </div>
  </div>
<% end %>
