<%= form_for [:admin, @testimonial], html: { class: 'form-horizontal' } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">Fill out the form below</div>
    <div class="panel-body">
      <%= render '/shared/flash_messages' unless flash.empty? %>
      <div class="form-group">
        <%= f.label :name, 'Name of Person', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Example: Eric Berry' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :body, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :body, rows: 8, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary">Save Testimonial</button>
      <%= link_to 'Cancel', admin_testimonials_path, class: 'btn btn-link' %>
    </div>
  </div>
<% end %>
