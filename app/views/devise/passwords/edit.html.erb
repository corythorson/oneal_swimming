<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin chunky-form' }) do |f| %>
    <h2 class="form-signin-heading">Change your password</h2>

    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <p>
      <label for="password">New Password</label>
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control input-lg', placeholder: 'Password' %>
    </p>
    <p>
      <label for="password">Confirm New Password</label>
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control input-lg', placeholder: 'Confirm Password' %>
    </p>
    <p>
      <%= f.submit 'Change Password', class: 'btn btn-lg btn-info pull-right' %>
      <%= render "devise/shared/links" %>
    </p>
  <% end %>
</div>
