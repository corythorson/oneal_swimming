<%= form_for @student, html: { class: 'form-horizontal' } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">Fill out the form below</div>
    <div class="panel-body">
      <%= render '/shared/flash_messages' unless flash.empty? %>
      <div class="form-group">
        <%= f.label :first_name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :dob, 'Date of Birth', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :dob, class: 'form-control mask-dob', placeholder: 'mm/dd/yyyy', value: @student.dob.try(:strftime, '%m/%d/%Y') %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :avatar, 'Photo', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.file_field :avatar, class: 'form-control' %>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary">Save Learner</button>
      <%= link_to 'Cancel', students_path, class: 'btn btn-link' %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  init.push(function() {
    $(".mask-dob").mask("99/99/9999");
  })
</script>
